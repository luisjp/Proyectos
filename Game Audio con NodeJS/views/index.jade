doctype html
html
  head

      script(type='text/javascript', src='js/jquery-2.0.3.min.js')
      script(src='/socket.io/socket.io.js')
      script(type='text/javascript', src='js/buffer-loader.js')
      script(type='text/javascript', src='js/init.js')
      script(type='text/javascript', src='js/cargaSound.js')
      script(type='text/javascript', src='js/script.js')
      link(rel='stylesheet', type='text/css', href='styles/styles.css')
      meta(http-equiv='X-UA-Compatible', content='chrome=1')
      meta(charset='UTF-8')
      title Toca Toca !
    body
      #container
        #header.header
          #users
            
              
          #logo
            img(src='img/tocamusic.png')

          #tema  
            input#Gtema(type='text' placeholder='Introduce tu Tema aqui' size='30')

          #menu
            #gain.gain Master
            #mGain.mGain
              center
                input#Cgain(type='range', value='100', max='100', min='0', orient='vertical')
        #cos.cos
          #instruments
            #drums
              #drumsBt.image
                img(src='img/Drums.png', width='200', height='120', onmouseover='this.src=\'img/Drums-Hover.png\'', onmouseout='this.src=\'img/Drums.png\'')
              #controlDrums.control
                #filters
                  #freqRange
                    span Frequencia : 
                    input#elFreqDrums(type='range', min='0', max='1', step='0.01')
                  #qualRange
                    span Calidad : 
                    input#elQualDrums(type='range', min='0', max='1', step='0.01')
            #hits
              #hitsBt.image
                img(src='img/Hits.png', width='200', height='120', onmouseover='this.src=\'img/Hits-Hover.png\'', onmouseout='this.src=\'img/Hits.png\'')
              #controlHits.control
                #filters

                  #freqRange
                    span Frequencia : 
                    input#elFreqH(type='range', min='0', max='1', step='0.01')
                  #qualRange
                    span Calidad : 
                    input#elQualH(type='range', min='0', max='1', step='0.01')
            #guitar
              #guitarBt.image
                img(src='img/guitar.png', width='160', height='120', onmouseover='this.src=\'img/guitar-Hover.png\'', onmouseout='this.src=\'img/guitar.png\'')
              #controlGuitar.control
                #filters

                  #freqRange
                    span Frequencia : 
                    input#elFreqG(type='range', min='0', max='1', step='0.01')
                  #qualRange
                    span Calidad : 
                    input#elQualG(type='range', min='0', max='1', step='0.01')
            #piano
              #pianoBt.image
                img(src='../img/piano.png', width='160', height='120', onmouseover='this.src=\'img/piano-Hover.png\'', onmouseout='this.src=\'img/piano.png\'')
              #controlPiano.control
                #filters

                  #freqRange
                    span Frequencia : 
                    input#elFreqP(type='range', min='0', max='1', step='0.01')
                  #qualRange
                    span Calidad : 
                    input#elQualP(type='range', min='0', max='1', step='0.01')
        #footer.footer
          #tempo.tempo
            #imgTempo
              img#imgMetro(src='img/metro.png', width='50', height='50')
            #rangeTempo
              input#Tempo(type='range', value='0.3', max='0.3', min='0.1', step='0.1', orient='horizontal')
